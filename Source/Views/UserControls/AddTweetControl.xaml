<UserControl x:Class="Source.Views.UserControls.AddTweetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Source.Views.UserControls"
             mc:Ignorable="d" 
             Height="150" HorizontalAlignment="Stretch">
    <Canvas>
        <StackPanel Canvas.Left="20" Canvas.Top="20">
            <StackPanel Orientation="Horizontal">
                <Ellipse Height="90" Width="90">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/StaticFiles/img/fakeProfile.png" Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBox Text="What's happening?" Margin="10 40" />
            </StackPanel>
        </StackPanel>
        <StackPanel Canvas.Bottom="20" Canvas.Left="120" HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="/StaticFiles/img/image.png" Width="20" />
        </StackPanel>
    </Canvas>
</UserControl>
