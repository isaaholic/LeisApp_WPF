<UserControl x:Class="Source.Views.UserControls.NotificationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Source.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Ellipse VerticalAlignment="Top" StrokeThickness=".3" Stroke="Black"  HorizontalAlignment="Left" Margin="5 6 0 0" Height="60" Width="60">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/StaticFiles/img/fakeProfile.png" />
                </Ellipse.Fill>
            </Ellipse>
            <StackPanel>
                <Label Content="@Username" FontSize="13" FontFamily="Bookman Old Style"></Label>
                <TextBlock Padding="5 0" Margin="0 3" Height="43" Width="238" TextWrapping="Wrap" Text="Content of the notification" ></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
